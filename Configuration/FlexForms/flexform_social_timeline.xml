                <el>
                    <settings.display_style>
                        <TCEforms>
                            <label>LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:display.style</label>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:display.style.timeline</numIndex>
                                        <numIndex index="1">timeline</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:display.style.columns</numIndex>
                                        <numIndex index="1">columns</numIndex>
                                    </numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:display.style.oneColumn</numIndex>
                                        <numIndex index="1">one_column</numIndex>
                                    </numIndex>
                                </items>
                                <minitems>0</minitems>
								<maxitems>1</maxitems>
								<size>1</size>
                                <default/>
                            </config>
                        </TCEforms>
                    </settings.display_style>
                    <settings.skin>
                        <TCEforms>
                            <label>LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:skin</label>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:skin.dark</numIndex>
                                        <numIndex index="1">light</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:skin.dark</numIndex>
                                        <numIndex index="1">dark</numIndex>
                                    </numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:skin.modern</numIndex>
                                        <numIndex index="1">modern</numIndex>
                                    </numIndex>
                                </items>
                                <minitems>0</minitems>
								<maxitems>1</maxitems>
								<size>1</size>
                            </config>
                        </TCEforms>
                    </settings.skin>
			        <settings.show_icons>
                        <TCEforms>
                            <label>LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:show.icons</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.show_icons>
