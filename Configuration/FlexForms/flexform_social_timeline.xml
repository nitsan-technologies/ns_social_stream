<T3DataStructure>
	<sheets>
		<general>
			<ROOT>
				<TCEforms>
					<sheetTitle>Function</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.plugin_type>
						<TCEforms>
							<label>LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:plugin.type</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:twitter</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:facebook</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:flickr</numIndex>
										<numIndex index="1">3</numIndex>
									</numIndex>
								</items>
								<minitems>0</minitems>
								<maxitems>1</maxitems>
								<default>1</default>
								<size>1</size>
							</config>
							<onChange>reload</onChange>
						</TCEforms>
					</settings.plugin_type>
					<settings.twitter_username>
				        <TCEforms>
							<label>LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:twitter.username</label>
							<config>
								<type>input</type>
								<size>30</size>
								<eval>required</eval>
							</config>
							<displayCond>FIELD:settings.plugin_type:=:1</displayCond>
				        </TCEforms>
			        </settings.twitter_username>
			        <settings.twitter_hashtag>
				        <TCEforms>
							<label>LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:twitter.hashtag</label>
							<config>
								<type>input</type>
								<size>30</size>
							</config>
							<displayCond>FIELD:settings.plugin_type:=:1</displayCond>
				        </TCEforms>
			        </settings.twitter_hashtag>
			        <settings.facebook_page_id>
				        <TCEforms>
							<label>LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:facebook.page.id</label>
							<config>
								<type>input</type>
								<size>30</size>
								<eval>required</eval>
							</config>
							<displayCond>FIELD:settings.plugin_type:=:2</displayCond>
				        </TCEforms>
			        </settings.facebook_page_id>
			        <settings.flickr_user_id>
				        <TCEforms>
							<label>LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:flickr.user.id</label>
							<config>
								<type>input</type>
								<size>30</size>
								<eval>required</eval>
							</config>
							<displayCond>FIELD:settings.plugin_type:=:3</displayCond>
				        </TCEforms>
			        </settings.flickr_user_id>
			        <settings.flickr_hashtag>
				        <TCEforms>
							<label>LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:flickr.hashtag</label>
							<config>
								<type>input</type>
								<size>30</size>
							</config>
							<displayCond>FIELD:settings.plugin_type:=:3</displayCond>
				        </TCEforms>
			        </settings.flickr_hashtag>
				</el>
			</ROOT>
		</general>
		<visibility>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:ns_social_stream/Resources/Private/Language/locallang_db.xlf:visibility</sheetTitle>
